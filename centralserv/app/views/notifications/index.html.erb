<section id='content'>
  <h1>Notifications - <%= @school.name %></h1>
  <div class="row">
    <br>
    <% if @school.notifications.length > 0 %>
      <div id="infinite-scroll">
        <% @school.notifications.each do |notification| %>
          <div class="infinite col-md-4">
            <div class="item-container">
              <h4><%= link_to notification.title, notification_path(notification), class: "item-link" %></h4>
            </div>
          </div>
        <% end %>
      </div>

      <nav id="page_nav">
        <a href="page2.html"></a>
      </nav>

    <% else %>
      <h4>There are no current notifications to show.</h4>
    <% end %>

  </div>
</section>