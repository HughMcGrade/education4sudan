<section id='content'>
  <h1>Messages - <%= @staff.name %></h1>
  <div class="row">
    <br>
    <% if @staff.messages.length > 0 %>
      <div id="infinite-scroll">
        <% @staff.messages.each do |message| %>
          <div class="infinite col-md-4">
            <div class="item-container">
              <h4><%= link_to message.title, message_path(message), class: "item-link" %></h4>
            </div>
          </div>
        <% end %>
      </div>

      <nav id="page_nav">
        <a href="page2.html"></a>
      </nav>

    <% else %>
      <h4>There are no current messages to show.</h4>
    <% end %>

  </div>
</section>