<section id='content'>
  <h1>Grades</h1>
  <div class="row">
    <br>
    <% if @grades.length > 0 %>
      <div id="infinite-scroll">
        <% @grades.each do |grade| %>
          <div class="infinite col-md-4">
            <div class="item-container">
              <h4><%= link_to grade.title, grade_path(grade), class: "item-link" %></h4>
            </div>
          </div>
        <% end %>
      </div>

      <nav id="page_nav">
        <a href="page2.html"></a>
      </nav>

    <% else %>
      <h4>There are no current grades to show.</h4>
    <% end %>

  </div>
</section>